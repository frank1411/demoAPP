<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="Welcome" icon="" />

    <StackLayout class="p-4">
        <Label text="Welcome to NativeScript!" class="text-3xl text-center mb-4" />
        <Label text="Tap counter challenge" class="text-xl text-center text-gray-600 mb-4" />
        <Button text="TAP ME" tap="{{ onTap }}" class="-primary mb-4" />
        <Label text="{{ message }}" class="text-lg text-center text-gray-400" textWrap="true" />
        
        <Button text="Reset Counter" tap="{{ onReset }}" class="-outline mt-4" />
    </StackLayout>
</Page>